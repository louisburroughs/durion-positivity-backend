{
  "project": {
    "name": "Durion POS – Prototype",
    "description": "Master project for Durion POS 6-month prototype: Moqui base, Experience layer, UI/Mobile, MCP, and Positivity integration.",
    "fields": [
      {
        "name": "Status",
        "dataType": "single_select",
        "options": [
          "Backlog",
          "Ready",
          "Analysis",
          "Design",
          "Dev: Moqui",
          "Dev: Experience",
          "Testing",
          "UI/MCP Integration",
          "Demo Ready",
          "Done"
        ],
        "defaultOption": "Backlog"
      },
      {
        "name": "Priority",
        "dataType": "single_select",
        "options": ["P0", "P1", "P2", "P3"],
        "defaultOption": "P2"
      },
      {
        "name": "Domain",
        "dataType": "single_select",
        "options": [
          "Work Execution",
          "Inventory",
          "Product & Pricing",
          "CRM",
          "Accounting",
          "Shop Management",
          "Positivity",
          "UI",
          "MCP"
        ]
      },
      {
        "name": "Layer",
        "dataType": "single_select",
        "options": [
          "Moqui Base",
          "Experience",
          "UI – Web",
          "UI – Mobile",
          "MCP",
          "Positivity",
          "AI Support"
        ]
      },
      {
        "name": "Owner",
        "dataType": "text"
      },
      {
        "name": "Target Iteration",
        "dataType": "iteration"
      },
      {
        "name": "Estimate (points)",
        "dataType": "number"
      },
      {
        "name": "AI Role",
      "dataType": "single_select",
      "options": [
        "Clarification",
        "Scaffolding",
        "Regression",
        "None"
      ]
      }
    ],
    "views": [
      {
        "name": "Board – All Domains",
        "type": "board",
        "default": true,
        "groupByField": "Status",
        "sort": {
