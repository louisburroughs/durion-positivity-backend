    "automation": [
      {
        "name": "Move to Done when closed",
        "event": "issue_closed",
        "action": {
          "type": "set_field",
          "field": "Status",
          "value": "Done"
        }
      },
      {
        "name": "Set Status to Ready on label added",
        "event": "label_added",
        "condition": {
          "label": "ready"
        },
        "action": {
          "type": "set_field",
          "field": "Status",
          "value": "Ready"
        }
      }
    ]
